<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Email:" %><br />
    <%= f.email_field :email, { autofocus: true, class: "forms"} %>
  </div>

  <div class="field">
    <%= f.label :password, "Passord:" %><br />
    <%= f.password_field :password, {autocomplete: "off", class: "forms"} %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "forms" %>
      <%= f.label :remember_me, class: "forms" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "button-smal" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
