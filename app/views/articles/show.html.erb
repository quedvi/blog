<%= tinymce_assets %>
<%= tinymce %>

<h2>Article</h2>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text.html_safe %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>

<% if is_admin? then %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>

<%= link_to 'Back', articles_path %>
